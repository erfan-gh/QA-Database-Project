extends layout

block content
  .container
  form.form-signin(method='post', enctype="multipart/form-data")
    h2.form-signin-heading Fill out the blanks
    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(name='email', type='email', placeholder='Email address', required='', autofocus='')

    label.sr-only(for='inputFirstName') First Name
    input#inputFirstName.form-control(name='first_name', type='text', placeholder='First Name', required='')

    label.sr-only(for='inputLastName') Last Name
    input#inputFirstName.form-control(name='last_name', type='text', placeholder='Last Name', required='')

    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(name='password', type='password', placeholder='Password', required='')

    label(for='inputImage') Profile Image
    input#inputImage.form-control(name='userPhoto', type='file', placeholder='Profile Image')

    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up